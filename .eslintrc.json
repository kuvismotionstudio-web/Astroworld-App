{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "script"
  },
  "rules": {
    "no-unused-vars": ["warn"],
    "no-undef": "error",
    "semi": ["error", "always"],
    "quotes": ["warn", "single"]
  },
  "globals": {
    "window": "readonly",
    "document": "readonly",
    "console": "readonly"
  }
}

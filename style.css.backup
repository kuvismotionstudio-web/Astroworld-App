.modal-overlay {
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease-out, visibility 0s linear 0.3s; /* visibility zmienia się po zakończeniu opacity */
}

.game-details-modal.fade-in,
.modal-overlay.fade-in {
    opacity: 1;
    visibility: visible;
    transition: opacity 0.3s ease-in; /* Animacja pojawiania się */
}

/* Aby modal znikał płynnie, musimy zmienić kolejność transition */

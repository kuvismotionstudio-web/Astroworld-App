/* --- Toast / Snackbar Notification --- */
.toast-message {
    position: fixed;
    left: 50%;
    bottom: 40px;
    transform: translateX(-50%);
    min-width: 260px;
    max-width: 90vw;
    background: linear-gradient(90deg, var(--primary-accent), var(--secondary-accent));
    color: #fff;
    font-family: 'Montserrat', sans-serif;
    font-size: 1.08em;
    font-weight: 700;
    padding: 18px 32px;
    border-radius: 12px;
    box-shadow: 0 6px 32px var(--glow-primary), 0 0 12px var(--glow-tertiary);
    z-index: 9999;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.4s cubic-bezier(0.4,0,0.2,1), bottom 0.4s cubic-bezier(0.4,0,0.2,1);
}
.toast-message.show {
    opacity: 1;
    pointer-events: auto;
    bottom: 60px;
    animation: toast-pop 0.5s cubic-bezier(0.4,0,0.2,1);
}
@keyframes toast-pop {
    0% { opacity: 0; bottom: 20px; transform: translateX(-50%) scale(0.95); }
    60% { opacity: 1; bottom: 65px; transform: translateX(-50%) scale(1.05); }
    100% { opacity: 1; bottom: 60px; transform: translateX(-50%) scale(1); }
}

/* === ANIMACJE FADE/SLIDE DLA SEKCJI === */
.fade-in {
  animation: fadeInSection 0.55s cubic-bezier(.4,0,.2,1);
  opacity: 1 !important;
  pointer-events: auto;
  z-index: 2;
}
.fade-out {
  animation: fadeOutSection 0.45s cubic-bezier(.4,0,.2,1);
  opacity: 0 !important;
  pointer-events: none;
  z-index: 1;
}
@keyframes fadeInSection {

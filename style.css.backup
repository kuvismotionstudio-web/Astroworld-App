/* Import czcionek z Google Fonts */
@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700;800&family=Roboto:wght@300;400;700&display=swap');


:root {
    /* Paleta kolorów dla bardzo ciemnego motywu z czerwonymi akcentami */
    --bg-dark: #121212; /* Głęboka czerń dla tła */
    --bg-gradient-start: #000000; /* Zmieniono na czarny, aby był początkiem gradientu */
    --bg-gradient-end: #8B0000;   /* Krwisty czerwony (Dark Red) */
    --card-bg: #1c1c1c; /* Tło kart plików, trochę jaśniejsze niż tło główne */
    --card-border: #333333; /* Ramka kart plików */
    --text-light: #f0f0f0; /* Bardzo jasny tekst dla kontrastu */
    --text-medium: #b0b0b0; /* Średnio jasny tekst */
    --primary-accent: #e53935; /* Główny akcent - żywy czerwony */
    --secondary-accent: #ff7043; /* Drugi akcent - pomarańczowo-czerwony */
    --shadow-color: rgba(0, 0, 0, 0.8); /* Bardziej intensywny cień (z efektem świetlnym) */
    --button-bg: #e53935; /* Tło przycisków */
    --button-hover-bg: #d32f2f; /* Tło przycisków po najechaniu */
    --input-bg: #2a2a2a; /* Tło pól input i select */
    --input-border: #555555; /* Ramka pól input i select */

    /* Nowe zmienne dla efektów świetlnych */
    --glow-primary: rgba(229, 57, 53, 0.7); /* Glow dla primary accent */
    --glow-secondary: rgba(255, 112, 67, 0.6); /* Glow dla secondary accent */
    --glow-text: rgb(255 0 3); /* Lekki glow dla tekstu */
    --hover-light: rgba(255, 255, 255, 0.08); /* Lekkie podświetlenie na hover */
    --glow-tertiary: rgba(226, 43, 43, 0.4); /* Fioletowy/niebieski glow */
}

/* Podstawowe style */
body {
    font-family: 'Roboto', sans-serif;
    margin: 0;
    padding: 0;
    /* Połącz background-image i background-gradient */
    background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="4" height="4" viewBox="0 0 4 4"><circle fill="rgba(255,255,255,0.02)" cx="2" cy="2" r="1"/></svg>') repeat,
                linear-gradient(135deg, var(--bg-gradient-start), var(--bg-gradient-end));
    background-attachment: fixed; /* Zastosuj fixed do połączonego tła */
    background-position: center center; /* Zastosuj pozycję do połączonego tła */
    background-size: auto, cover; /* Dostosuj rozmiar dla szumu i cover dla gradientu */
    background-blend-mode: overlay; /* To teraz połączy szum z gradientem */

    color: var(--text-light);
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

.container {
    background: none;
    border-radius: 0;
    box-shadow: none;
    padding: 0;
    margin: 0;
    width: 100%;
    max-width: none;
    flex-grow: 1;
    position: relative;
    overflow: visible;
    border: none;
}

/* Animacja dla tła kontenera - subtelne migotanie */
.container:hover::before {
    opacity: 0.2; /* Subtelny glow na hover */
    animation: container-glow 3s infinite alternate ease-in-out;
}

@keyframes container-glow {
    from {
        filter: blur(20px) brightness(0.8);
        transform: scale(1);
    }
    to {
        filter: blur(25px) brightness(1.2);
        transform: scale(1.01);
    }
}


/* --- Animacje przejść sekcji stron --- */
.page-section {
    opacity: 1;
    transform: translateY(0);
    transition: opacity 0.45s cubic-bezier(0.4,0,0.2,1), transform 0.45s cubic-bezier(0.4,0,0.2,1);
    will-change: opacity, transform;
}
.page-section.fade-out {
    opacity: 0;
    transform: translateY(40px) scale(0.98);
    pointer-events: none;
    z-index: 0;
}
.page-section.fade-in {
    opacity: 1;
    transform: translateY(0) scale(1);
    z-index: 1;
}

h1 {
    font-family: 'Montserrat', sans-serif;
    font-weight: 800;
    color: var(--primary-accent);
    text-align: center;
    margin-bottom: 30px;
    font-size: 3em;
    text-shadow: 0 0 15px rgba(229, 57, 53, 0.6);
    position: relative;
    overflow: hidden;
}

/* Animacja dla nagłówka h1 - delikatne "oddychanie" blaskiem */
h1::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    box-shadow: 0 0 20px var(--glow-primary);
    opacity: 0;
    animation: h1-glow 4s infinite ease-in-out;
    pointer-events: none; /* Upewnij się, że nie koliduje z interakcjami */
}

@keyframes h1-glow {
    0% { opacity: 0; transform: scale(1); }
    50% { opacity: 0.7; transform: scale(1.02); }
    100% { opacity: 0; transform: scale(1); }
}


/* Kontrolki wyszukiwania i filtrowania */
.controls {
    display: flex;
    flex-wrap: wrap; /* Pozwala elementom zawijać się na mniejszych ekranach */
    gap: 20px;
    margin-bottom: 30px;
    justify-content: center;
}

.controls input[type="text"],
.controls select {
    padding: 12px 20px;
    border: 1px solid var(--input-border);
    border-radius: 8px;
    background-color: var(--input-bg);
    color: var(--text-light);
    font-size: 1.1em;
    outline: none;
    transition: all 0.3s ease;
    box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.4);
}

.controls input[type="text"]::placeholder {
    color: var(--text-medium);
}

.controls input[type="text"]:focus,
.controls select:focus {
    border-color: var(--primary-accent);
    box-shadow: 0 0 0 3px rgba(229, 57, 53, 0.3), 0 0 15px var(--glow-primary); /* Dodany glow */
}

/* Lista plików */
.file-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 25px;
    padding: 20px 0;
    min-height: 200px; /* Minimalna wysokość dla widoczności */
}

.file-item {
    background: var(--card-bg);
    border: 1px solid var(--card-border);
    border-radius: 10px;
    padding: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease, background-color 0.2s ease;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
    position: relative; /* Dla pozycjonowania ikony pobierania */
    overflow: hidden; /* Ważne dla efektów świetlnych wewnątrz */
}

.file-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.7), 0 0 15px var(--glow-primary); /* Dodany glow */
    border-color: var(--primary-accent);
    background-color: var(--hover-light); /* Subtelne podświetlenie tła */
}

/* Keyframes dla animacji pojawiania się (np. Fade-In Up) */
@keyframes fade-in-up {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

/* Dodaj to do .file-item.loaded (lub innej klasy, którą dodasz JS) */
.file-item.loaded {
    animation: fade-in-up 0.6s ease-out forwards;
    /* Możesz użyć 'animation-delay' dla każdego elementu, aby pojawiły się kaskadowo */
}

/* Efekt "shine" na kartach po najechaniu */
.file-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: -75%;
    width: 50%;
    height: 100%;
    background: rgba(255, 255, 255, 0.1);
    transform: skewX(-20deg);
    transition: transform 0.3s ease-out;
}

.file-item:hover::before {
    transform: skewX(-20deg) translateX(150%);
}


.file-icon {
    font-size: 4em;
    color: var(--secondary-accent);
    margin-bottom: 15px;
    text-shadow: 0 0 10px rgba(255, 112, 67, 0.5);
    animation: pulse-icon 2s infinite alternate; /* Animacja pulsująca dla ikon */
}

/* Keyframes dla animacji pulsującej ikony */
@keyframes pulse-icon {
    from {
        text-shadow: 0 0 10px var(--glow-secondary);
    }
    to {
        text-shadow: 0 0 20px var(--glow-secondary), 0 0 30px rgba(255, 112, 67, 0.3);
    }
}

.file-name {
    font-family: 'Montserrat', sans-serif;
    font-weight: 700;
    font-size: 1.2em;
    color: var(--text-light);
    margin-bottom: 8px;
    white-space: nowrap; /* Zapobiega zawijaniu nazwy */
    overflow: hidden; /* Ukrywa przepełnienie */
    text-overflow: ellipsis; /* Dodaje elipsę dla obciętych nazw */
    width: 100%; /* Upewnij się, że element ma szerokość */
    text-shadow: 0 0 3px rgba(240, 240, 240, 0.897); /* Bardzo subtelny cień dla nazw plików */
}

.file-size, .file-date {
    font-size: 0.9em;
    color: var(--text-medium);
    margin-bottom: 5px;
}

.download-button {
  background-color: var(--button-bg);
  color: #ffffff;
  border: none;
  border-radius: 4px;
  padding: 6px 12px;
  font-size: 0.55em;
  font-weight: 700;
  cursor: pointer;
  transition: background-color 0.3s ease, transform 0.2s ease, box-shadow 0.3s ease;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: 4px;
  margin-top: 7px;
  box-shadow: 0 2px 5px rgb(255 255 255 / 11%);
}

.download-button i {
    font-size: 1em;
    transition: transform 0.2s ease; /* Dodaj płynne przejście */
}

.download-button:hover {
    background-color: var(--button-hover-bg);
    transform: translateY(-2px);
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.8), 0 0 15px var(--glow-primary); /* Intensywniejszy cień i glow */
}

.download-button:hover i {
    transform: scale(1.1); /* Ikona delikatnie się powiększa */
}

/* Animacja dla przycisku pobierania przy kliknięciu */
.download-button:active {
    transform: translateY(0px);
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.6), 0 0 5px var(--glow-primary);
    animation: button-press-glow 0.5s ease-out; /* Dodaj animację */
}


/* Komunikaty o stanie */
.loading-indicator,
.no-files-message,
.no-results-message {
    text-align: center;
    color: var(--text-medium);
    font-size: 1.2em;
    padding: 50px 0;
    animation: fade-in-text 1s ease-out; /* Animacja pojawiania się tekstu */
}

@keyframes fade-in-text {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}


/* Modal (ukryty domyślnie) */
.game-details-modal {
    display: none; /* Domyślnie ukryty */
    position: fixed;
    z-index: 1001; /* Wyżej niż overlay */
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 90%;
    max-width: 900px;
    background: #000000;
    border: 1px solid #ff000070;
    border-radius: 10px;
    box-shadow: 0 5px 15px rgb(255 0 0 / 33%);
    overflow: auto; /* Dodaj przewijanie, jeśli treść jest długa */
    max-height: 90vh; /* Ogranicz wysokość, aby zmieścił się na ekranie */
    padding: 20px;
    transition: transform 0.3s ease-out, opacity 0.3s ease-out; /* Animacje pojawienia/znikania */
}

/* Klasa do ukrywania */
.hidden {
    display: none !important; /* Użyj !important, aby nadpisać inne style */
}

/* Overlay modalu */
.modal-overlay {
    display: none; /* Domyślnie ukryty */
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7); /* Półprzezroczysta czerń */
    z-index: 1000; /* Niżej niż modal */
    transition: opacity 0.3s ease-out;
}

/* Dodatkowa reguła, aby upewnić się, że modal jest widoczny po usunięciu klasy hidden */
.game-details-modal:not(.hidden) {
    display: block !important;
    animation: modal-pop-in 0.3s ease-out forwards; /* Animacja pojawienia się modala */
}

@keyframes modal-pop-in {
    from {
        opacity: 0;
        transform: translate(-50%, -45%) scale(0.95);
    }
    to {
        opacity: 1;
        transform: translate(-50%, -50%) scale(1);
    }
}

.game-details-modal.hidden {
    animation: modal-pop-out 0.3s ease-in forwards; /* Animacja znikania modala */
}

@keyframes modal-pop-out {
    from {
        opacity: 1;
        transform: translate(-50%, -50%) scale(1);
    }
    to {
        opacity: 0;
        transform: translate(-50%, -45%) scale(0.95);
    }
}


.modal-content {
    position: relative;
    padding: 20px;
}

.close-button {
    position: absolute;
    top: 10px;
    right: 15px;
    color: var(--text-medium);
    font-size: 2em;
    font-weight: bold;
    cursor: pointer;
    background: none;
    border: none;
    transition: color 0.3s ease, transform 0.2s ease;
}

.close-button:hover,
.close-button:focus {
    color: var(--primary-accent);
    transform: rotate(90deg); /* Animacja obrotu przycisku zamknięcia */
}

#modalGameTitle {
    font-family: 'Montserrat', sans-serif;
    font-weight: 800;
    color: var(--primary-accent);
    margin-bottom: 15px;
    text-align: center;
    font-size: 2.5em;
    text-shadow: 0 0 10px var(--glow-primary), 0 0 5px rgba(240, 240, 240, 0.1); /* Delikatnie wzmocniony cień */
}

#modalGameDescription {
    color: var(--text-light);
    margin-bottom: 20px;
    line-height: 1.6;
    text-shadow: 0 0 3px rgba(240, 240, 240, 0.1), 0 0 1px rgba(240, 240, 240, 0.05);
}

.modal-grid-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 20px;
    margin-bottom: 20px;
}

.modal-section {
    background: var(--input-bg);
    border: 1px solid var(--input-border);
    border-radius: 8px;
    padding: 15px;
    box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.4);
    position: relative;
    overflow: hidden;
    border-radius: 10px; /* Lekkie zaokrąglenie */
}

/* Animacja dla sekcji modala - subtelny cień na hover */
.modal-section:hover {
    box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.4), 0 0 10px var(--glow-tertiary);
}


.modal-section h3 {
    font-family: 'Montserrat', sans-serif;
    color: var(--secondary-accent);
    margin-top: 0;
    margin-bottom: 10px;
    font-size: 1.3em;
    border-bottom: 1px solid var(--input-border);
    padding-bottom: 5px;
    text-shadow: 0 0 5px rgba(255, 112, 67, 0.3), 0 0 2px rgba(255, 112, 67, 0.1); /* Subtelny, podwójny cień */
}

.video-container {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
    height: 0;
    overflow: hidden;
    background-color: #000; /* Domyślne tło dla iframe */
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
    transition: box-shadow 0.3s ease;
}

.video-container:hover {
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.6), 0 0 20px var(--glow-primary); /* Intensywny glow na trailerze */
}

.video-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0;
}

.screenshots-container {
    display: flex; /* Zmienione na flex dla lepszej kontroli nad przewijaniem */
    overflow-x: auto; /* Pozwala na przewijanie zrzutów ekranu */
    gap: 10px;
    padding-bottom: 10px; /* Daje miejsce na scrollbar */
    max-height: 250px; /* Ogranicz wysokość kontenera ze zrzutami */
    overflow-y: hidden; /* Wyłącz przewijanie w pionie, aby nie kolidowało z poziomym */
    scrollbar-width: thin; /* Firefox */
    scrollbar-color: var(--primary-accent) var(--card-bg); /* Firefox */
}

.screenshots-container::-webkit-scrollbar {
    height: 8px; /* Zmienione na wysokość dla poziomego scrollbara */
}

.screenshots-container::-webkit-scrollbar-track {
    background: var(--card-bg);
    border-radius: 10px;
}

.screenshots-container::-webkit-scrollbar-thumb {
    background-color: var(--primary-accent);
    border-radius: 10px;
    border: 2px solid var(--card-bg);
    transition: background-color 0.3s ease; /* Dodaj płynne przejście */
}

.screenshots-container::-webkit-scrollbar-thumb:hover {
    background-color: var(--secondary-accent); /* Zmień kolor na hover */
}

.screenshots-container img {
    width: 100%;
    height: auto;
    border-radius: 5px;
    border: 1px solid var(--card-border);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    object-fit: cover; /* Upewnia się, że obrazek wypełnia kontener */
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
}

.screenshots-container img:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5), 0 0 10px var(--glow-secondary); /* Glow na zrzutach ekranu */
}

.modal-label {
    font-weight: 700;
    color: var(--text-medium);
    margin-bottom: 4px;
    font-size: 1.01em;
}

.modal-info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 15px;
    margin-top: 20px; /* Odstęp od poprzedniej sekcji */
    margin-bottom: 20px;
}

.modal-info-grid > div {
    background: var(--input-bg);
    border: 1px solid var(--input-border);
    border-radius: 8px;
    padding: 10px;
    box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.4);
    transition: background-color 0.2s ease, box-shadow 0.2s ease;
    border-radius: 10px; /* Lekkie zaokrąglenie */
}

.modal-info-grid > div:hover {
    background-color: var(--hover-light);
    box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.4), 0 0 8px var(--glow-text); /* Subtelny glow na informacjach */
    transform: translateY(-2px); /* Subtelne uniesienie */
}

.modal-info-grid span {
    color: var(--text-light);
    display: block; /* Upewnij się, że tekst jest w nowej linii */
    font-size: 0.95em;
}



@keyframes button-press-glow {
    0% { box-shadow: 0 2px 5px rgba(0, 0, 0, 0.6), 0 0 8px var(--glow-primary); }
    50% { box-shadow: 0 2px 5px rgba(0, 0, 0, 0.6), 0 0 12px var(--glow-primary); } /* Lekkie "oddychanie" */
    100% { box-shadow: 0 2px 5px rgba(0, 0, 0, 0.6), 0 0 8px var(--glow-primary); }
}

/* Stopka */
.footer {
    margin-top: auto; /* Przesuwa stopkę na sam dół */
    background-color: var(--card-bg);
    color: #fff;
    text-align: center;
    padding: 20px;
    border-top: 1px solid var(--card-border);
    font-size: 0.9em;
    position: relative; /* Dla ewentualnych animacji wewnętrznych */
    overflow: hidden;
}
.footer p {
    color: #fff;
    text-shadow: 0 0 10px var(--glow-primary), 0 0 4px var(--glow-secondary), 0 0 2px #fff;
    transition: text-shadow 0.3s;
}
.footer:hover p {
    text-shadow: 0 0 18px var(--glow-primary), 0 0 8px var(--glow-secondary), 0 0 8px #fff;
}

/* Subtelny animowany cień dla stopki */
.footer::before {
    content: '';
    position: absolute;
    top: -5px;
    left: 0;
    width: 100%;
    height: 5px;
    background: linear-gradient(to right, transparent, var(--primary-accent), transparent);
    animation: footer-line-glow 5s infinite linear;
    opacity: 0.5;
}

@keyframes footer-line-glow {
    0% { transform: translateX(-100%); opacity: 0.3; }
    50% { transform: translateX(0%); opacity: 0.7; }
   100% { transform: translateX(100%); opacity: 0.3; }
}


/* Media Queries dla responsywności */
@media (max-width: 768px) {
    .container {
        padding: 25px;
        margin: 30px auto;
    }

    h1 {
        font-size: 2.5em;
    }

    .controls {
        flex-direction: column;
        gap: 15px;
    }

    .controls input[type="text"],
    .controls select {
        max-width: 100%;
    }

    .file-list {
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
    }

    .game-details-modal {
        padding: 20px;
        width: 95%;
    }

    #modalGameTitle {
        font-size: 1.8em;
    }

    .modal-grid-container {
        grid-template-columns: 1fr; /* Stack columns on smaller screens */
    }

    .modal-info-grid {
        grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
        gap: 15px;
    }

    .modal-download-button {
        width: 100%;
        min-width: unset;
    }
}

@media (max-width: 480px) {
    .container {
        padding: 20px;
        margin: 20px auto;
    }

    h1 {
        font-size: 2em;
        margin-bottom: 20px;
    }

    .controls {
        gap: 15px;
    }

    .controls input[type="text"],
    .controls select {
        padding: 10px 15px;
        font-size: 1em;
    }

    .file-list {
        gap: 15px;
    }

    .file-item {
        padding: 15px;
    }

    .file-icon {
        font-size: 3.5em;
    }

    .file-name {
        font-size: 1.1em;
    }

    .file-size {
        font-size: 0.85em;
    }

    .download-button {
        padding: 10px 20px;
        font-size: 1em;
    }
}


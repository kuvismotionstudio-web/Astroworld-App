/* === ANIMACJA POJAWIANIA SIĘ OKNA UPLOAD === */
.fade-in-upload {
  animation: uploadModalFadeIn 0.38s cubic-bezier(.23,1.12,.62,1.01);
}
.fade-out-upload {
  animation: uploadModalFadeOut 0.28s cubic-bezier(.23,1.12,.62,1.01);
}
@keyframes uploadModalFadeIn {
  0% {
    opacity: 0;
    transform: scale(0.88) translate(-50%, -50%);
  }
  100% {
    opacity: 1;
    transform: scale(1) translate(-50%, -50%);
  }
}
@keyframes uploadModalFadeOut {
  0% {
    opacity: 1;
    transform: scale(1) translate(-50%, -50%);
  }
  100% {
    opacity: 0;
    transform: scale(0.88) translate(-50%, -50%);
  }
}
.modal-overlay.fade-in-upload {
  animation: overlayFadeIn 0.32s cubic-bezier(.23,1.12,.62,1.01);
}
.modal-overlay.fade-out-upload {
  animation: overlayFadeOut 0.22s cubic-bezier(.23,1.12,.62,1.01);
}
@keyframes overlayFadeIn {
  0% { opacity: 0; }
  100% { opacity: 1; }
}
@keyframes overlayFadeOut {
  0% { opacity: 1; }
  100% { opacity: 0; }
}
